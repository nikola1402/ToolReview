<% include ../partials/header %>
    <div class="container">
        <div class="row">

            <h1 style="text-align: center;">Edit
                <%= foundTool.name %>
            </h1>

            <div style="width: 30%; margin: 50px auto;">
                <form action="/tools/<%= foundTool._id %>?_method=PUT" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="tool[name]" value="<%= foundTool.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="tool[price]" value="<%= foundTool.price %>" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="tool[image]" value="<%= foundTool.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="tool[description]" value="<%= foundTool.descripton %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
                    </div>

                </form>
                <a href="/tools"> Go Back</a>
            </div>


        </div>

    </div>

    <% include ../partials/footer %>
